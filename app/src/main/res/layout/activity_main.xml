<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="-64dp"
        android:layout_toStartOf="@id/contacts_title"
        android:contentDescription="@string/list_icon_image"
        android:src="@drawable/baseline_list_24">
    </ImageView>

    <TextView
        android:id="@+id/contacts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/contacts"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold">
    </TextView>

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-68dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/contacts_title"
        android:contentDescription="@string/search_icon_image"
        android:src="@drawable/baseline_search_24">
    </ImageView>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_below="@id/contacts_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>